<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_leaf"
        android:id="@+id/iv_item"
        android:layout_margin="7dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_item"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_item"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Product Title"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Brand Title"
            android:textColor="#000"
            android:textSize="11sp"
            android:textAllCaps="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:id="@+id/ll_add_remove"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:id="@+id/iv_remove"
                android:src="@drawable/ic_remove_circle_outline_black_36dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/tv_quantity_item"
                android:text="0"
                android:textSize="19sp"
                android:textColor="#000"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:id="@+id/iv_add"
                android:src="@drawable/ic_add_circle_outline_black_36dp"
                />



        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_delete_item"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="#616161"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_delete_item"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="â‚¹ 0.0"
        android:textSize="20sp"
        android:textColor="#000"
        />

</RelativeLayout>
