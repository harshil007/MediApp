<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="startup.com.mediapp.ProfileFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardElevation="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <startup.com.mediapp.CircularImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:layout_centerHorizontal="true"
                android:src="@drawable/category_5"
                android:layout_marginTop="10dp"
                android:id="@+id/profilepic" />





    <TextView
        android:id="@+id/nam"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kunal Pursnani"
        android:layout_margin="10dp"
        android:layout_below="@+id/profilepic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/emai"
        android:layout_below="@+id/nam"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="kunal.pursnani05@gmail.com"
        />

            <TextView
                android:id="@+id/mob"
                android:layout_below="@+id/emai"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="8460792687" />

            <TextView
                android:id="@+id/add"
                android:layout_below="@+id/mob"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:text="B-64/1,kubernagar \nAhmedabad \nGujarat \n382340" />


     </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
