<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fl_item"
    android:orientation="vertical"
    >


<android.support.v7.widget.CardView
    android:id="@+id/cv_list_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardElevation="5dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="75dp"
            android:layout_height="77dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="7dp"
            android:src="@drawable/icon_leaf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_item"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Product Title"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Brand Title"
                android:textColor="#000"
                android:textSize="11sp"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10"
                android:textSize="14sp"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here for description"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_click_desc"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/ll_add_remove"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/iv_remove"
                android:src="@drawable/ic_remove_circle_outline_black_36dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_quantity_item"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_gravity="center"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/iv_add"
                android:src="@drawable/ic_add_circle_outline_black_36dp"
                />

        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/fab_cart_add"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:gravity="center"

            android:layout_marginRight="7dp"
            android:scaleType="center"
            android:src="@drawable/ic_add_circle_outline_black_36dp"
            android:tint="#f0f0f0"
            android:visibility="visible"
            />





    </RelativeLayout>


</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_list_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="3dp"
        android:visibility="gone"
        >

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the Description for this Item"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="7dp"
        android:textSize="13sp"

        />

    </android.support.v7.widget.CardView>
</LinearLayout>