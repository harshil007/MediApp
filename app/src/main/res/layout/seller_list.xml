<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="5dp"
    >

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:src="@drawable/icon_leaf"
        android:id="@+id/iv_seller_shop"
        android:layout_margin="7dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_seller_shop"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_item"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Shop Name"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_star1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="#F57F17"
                />
            <ImageView
                android:id="@+id/iv_star2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="#F57F17"
                />
            <ImageView
                android:id="@+id/iv_star3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="#F57F17"
                />
            <ImageView
                android:id="@+id/iv_star4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="#F57F17"
                />
            <ImageView
                android:id="@+id/iv_star5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_border_black_24dp"
                android:tint="#F57F17"
                />
        </LinearLayout>

      <TextView
          android:id="@+id/tv_shop_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Chandkheda"
          android:layout_marginTop="5dp"
          />

    </LinearLayout>

    <Button
        android:id="@+id/b_select_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Select"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="17sp"
        />


</RelativeLayout>
